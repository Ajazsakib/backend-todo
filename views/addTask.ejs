          class="form-box"
          action="/task/create-task"
          method="POST"
          id="createTask"
        >
          <div class="form-group">
          
            <input
              type="text"
              class="form-control"
              placeholder="Enter Task"
              name="taskName"
              id="taskName"
            />
          </div>
          
          <div class="form-group">
            <input type="submit" value="Add Task" class="btn btn-login" />
          </div>
          
   
            </div>
        </section>
    </form>

